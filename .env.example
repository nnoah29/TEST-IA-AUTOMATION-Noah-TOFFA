# Fournisseur IA : "gemini" ou "openai"
AI_PROVIDER=gemini

# Clé API Gemini (obligatoire si AI_PROVIDER=gemini)
GEMINI_API_KEY=your_gemini_api_key_here

# Clé API OpenAI (obligatoire si AI_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here

# Modèle à utiliser
# Gemini : gemini-2.0-flash, gemini-1.5-pro, gemini-2.0-flash-exp
# OpenAI : gpt-4o, gpt-4o-mini
MODEL_NAME=gemini-2.0-flash

# Dossiers de données
INPUT_DIR=data/fanga_inbox
OUTPUT_DIR=data/fanga_organised

# Seuil de confiance (0.0 à 1.0) — en dessous → dossier A_verifier/
CONFIDENCE_THRESHOLD=0.7
